{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend API server for iForgotPassword",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "migrate": "tsx src/services/database/migrations/migrate.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@iforgotpassword/shared-constants": "workspace:*",
    "@iforgotpassword/shared-crypto": "workspace:*",
    "@iforgotpassword/shared-types": "workspace:*",
    "@iforgotpassword/shared-validators": "workspace:*",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "winston": "^3.11.0",
    "express-async-errors": "^3.1.1",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2"
  }
}
